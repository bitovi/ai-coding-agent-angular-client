{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "strict": false
  },
  "include": ["src/**/*", "index.ts", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "tests"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
