{
  "name": "ai-coding-agent-angular-client",
  "version": "1.0.0",
  "description": "This is an AI coding agent that runs Claude with MCP (Model Context Protocol) service integration. It provides a web interface for managing prompts and MCP service connections, handling OAuth authorization flows, and executing Claude prompts with access to external tools and data sources.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "backend:start": "npm run start --workspace=backend",
    "backend:dev": "npm run dev --workspace=backend",
    "backend:dev-no-auth": "npm run dev-no-auth --workspace=backend",
    "backend:build": "npm run build --workspace=backend",
    "backend:test": "npm run test --workspace=backend",
    "frontend:start": "npm run start --workspace=frontend",
    "frontend:dev": "npm run start --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "frontend:test": "npm run test --workspace=frontend",
    "dev:all": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/ai-coding-agent-angular-client.git"
  },
  "author": "Bitovi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitovi/ai-coding-agent-angular-client/issues"
  },
  "homepage": "https://github.com/bitovi/ai-coding-agent-angular-client#readme",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
